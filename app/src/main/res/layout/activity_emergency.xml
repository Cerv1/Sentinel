<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emergency_title"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:textSize="30dip"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/emergency_title" />

        <TextView
            android:id="@+id/countdown_text"
            android:textSize="35dip"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/emergency_explanation"
            android:textAlignment="center"
            android:textSize="16dip"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emergency_explanation" />


        <Switch
            android:id="@+id/emergency_switch"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:showText="true"
            android:textOff=""
            android:textOn=""
            android:scaleX="3"
            android:scaleY="3"
            android:switchPadding="10sp"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>